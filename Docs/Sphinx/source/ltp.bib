   keywords = {Discharge,Experimental,Leader,Lightning,Pilot system,Streamer,X-ray},
   title = {Experimental study on hard x-rays emitted from metre-scale negative discharges in air},
   volume = {48},
   year = {2015},
}
@article{Østgaard2016,
   abstract = {Discharge experiments were carried out at the Eindhoven University of Technology in 2013. The experimental setup was designed to search for electrons produced in meter-scale sparks using a 1 MV Marx generator. Negative voltage was applied to the high voltage (HV) electrode. Five thin (1 mm) plastic detectors (5 cm2 each) were distributed in various configurations close to the spark gap. Earlier studies have shown (for HV negative) that X-rays are produced when a cloud of streamers is developed 30–60 cm from the negative electrode. This indicates that the electrons producing the X-rays are also accelerated at this location, that could be in the strong electric field from counterstreamers of opposite polarity. Comparing our measurements with modeling results, we find that ∼300 keV electrons produced about 30–60 cm from the negative electrode are the most likely source of our measurements. A statistical analysis of expected detection of photon bursts by these fiber detectors indicates that only 20%–45% of the detected bursts could be from soft (∼10 keV) photons, which further supports that the majority of detected bursts are produced by relativistic electrons.},
   author = {N. Østgaard and B. E. Carlson and R. S. Nisi and T. Gjesteland and Grøndahl and A. Skeltved and N. G. Lehtinen and A. Mezentsev and M. Marisaldi and P. Kochkin},
   doi = {10.1002/2015JD024394},
   issn = {21562202},
   issue = {6},
   journal = {Journal of Geophysical Research},
   pages = {2939-2954},
   title = {Relativistic electrons from sparks in the laboratory},
   volume = {121},
   year = {2016},
}
@article{Kochkin2016a,
   abstract = {When voltage pulses of 1 MV drive meter long air discharges, short and intense bursts of x-rays are measured. Here we develop a model for electron acceleration and subsequent photon generation within this discharge to understand these bursts. We start from the observation that the encounter of two streamers of opposite polarity launches the electrons, that they are further accelerated in the discharge field and then lose their energy, e.g., by photon emission through Bremsstrahlung. We model electron and photon dynamics in space and energy with a Monte Carlo model. Also the detector response to incoming photons is modelled in detail. The model justifies the approximation that the x-ray bursts are isotropic in space; this assumption is used to conclude that x-ray bursts near the high-voltage electrode with 6.104 photons and characteristic energies of 160 keV closely reproduce the measured spectra and attenuation curves. The nanosecond duration of the bursts as well as their energy spectrum is consistent with model calculations.},
   author = {Pavlo Kochkin and Christoph Köhn and Ute Ebert and Lex Van Deursen},
   doi = {10.1088/0963-0252/25/4/044002},
   issn = {13616595},
   issue = {4},
   journal = {Plasma Sources Science and Technology},
   keywords = {discharge,high-voltage,run-away electron,streamer,x-ray},
   title = {Analyzing x-ray emissions from meter-scale negative discharges in ambient air},
   volume = {25},
   year = {2016},
}
@article{Hettiarachchi2017a,
   abstract = {In this experimental work, the influence of the grounded anode geometry is studied on the X-ray production from the laboratory sparks in air at atmospheric pressure when a negative impulse voltage is applied to a high voltage rod which served as a cathode. The result shows that the smaller the diameter of the anode, the higher the energy of X-ray bursts. This observation can be explained by the mechanism that the encounter of negative and positive streamer fronts just before the final breakdown is the event that accelerates electrons to X-ray generating energies, but may not be the only mechanism that generates X-rays.},
   author = {Pasan Hettiarachchi and Mahbubur Rahman and Vernon Cooray and Joseph Dwyer},
   doi = {10.1016/j.jastp.2016.07.012},
   issn = {13646826},
