   title = {A terrestrial gamma-ray flash and ionospheric ultraviolet emissions powered by lightning},
   volume = {367},
   url = {http://science.sciencemag.org/content/early/2019/12/09/science.aax3872.abstract},
   year = {2020},
}
@article{Pancheshnyi2015,
   abstract = {An analysis of gas ionization by the radiation produced in a low-current gas discharge is performed here on the basis of the comparison of measurements and the results of direct simulation of the excitation of identified extreme ultraviolet transitions, radiation transport and ionizing absorption of radiation. In unitary gases and in their mixtures with low admixtures of other gases, the ionizing radiation is generated in one electron impact by direct dissociative excitation and by direct ionizing excitation followed by a radiative transition of an excited neutral atom or ion, respectively. In N2-O2 mixtures, photoionization predominantly occurs via ionization of O2 molecules due to the absorption of the emission produced by excited N2 and, possibly, some N I, both produced by direct electron impact. The results obtained in this work provide the missing data required for performing direct numerical simulation of pre-breakdown phenomena, including the inception and propagation of coronas and creeping sparks, in the above-mentioned gases and mixtures.},
   author = {Sergey Pancheshnyi},
   doi = {10.1088/0963-0252/24/1/015023},
   issn = {13616595},
   issue = {1},
   journal = {Plasma Sources Science and Technology},
   keywords = {EUV,photoionization,streamer},
   title = {Photoionization produced by low-current discharges in O2, air, N2 and CO2},
   volume = {24},
   year = {2015},
}
@article{Malone2012,
   abstract = {Integral cross sections for electron-impact excitation out of the ground-state level X1Σg+(v′′=0) to the b1Πu, c31Πu, o31Π u, b′1Σu+, c4′1Σu+, G3Πu, and F3Πu electronic states in N2 are reported at incident energies ranging between 17.5 and 100 eV. We also provide excitation cross sections using emission-based excitation shape functions and optical oscillator strengths. These cross-section results are of great importance to planetary atmospheric modeling of the emissions observed in Earth's atmosphere as well as those of Titan and Triton, the largest moons of Saturn and Neptune, respectively. Critical comparisons of the present cross sections with previous values are presented in an effort to provide improved cross sections for electron excitation of this fundamental molecule's important transitions. © 2012 American Physical Society.},
