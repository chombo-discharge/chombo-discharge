   pages = {441-450},
   title = {Positive streamer between parallel plate electrodes in atmospheric pressure air},
   volume = {30},
   url = {http://stacks.iop.org/0022-3727/30/i=3/a=017?key=crossref.fa2762b4975b4fcf9215e3728af65bb0},
   year = {1997},
