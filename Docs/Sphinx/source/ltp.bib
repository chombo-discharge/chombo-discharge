}
@article{Babaeva2008,
   abstract = {The branching of streamers in atmospheric-pressure air, dense gases, and liquids is a common occurrence whose origins are likely found with many causes, both deterministic and stochastic. In this paper, we investigate the consequences of stochastic inhomogeneities on the propensity of branching of streamers in high-pressure gases. © 2008 IEEE.},
