StreamerInceptionTagger.verbosity   = -1    # Tagger chattiness. 
StreamerInceptionTagger.buffer      = 0     # Grown buffer around flagged cells
StreamerInceptionTagger.max_voltage = 60E3   # Maximum applied voltage 
