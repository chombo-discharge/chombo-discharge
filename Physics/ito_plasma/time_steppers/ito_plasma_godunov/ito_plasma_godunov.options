# ==================================================================================================== 
# ITO_PLASMA_GODUNOV CLASS OPTIONS
n# ==================================================================================================== 
ito_plasma_godunov.verbosity      = -1             # Verbosity
ito_plasma_godunov.min_dt         = 0.0            # Minimum dt
ito_plasma_godunov.max_dt         = 1.0            # Maximum dt
ito_plasma_godunov.particle_Realm = primal         # Particle Realm. Default is primal
ito_plasma_godunov.load_balance   = true           # Load balance or not
ito_plasma_godunov.box_sorting    = morton         # Box sorting for load balancing. 'none', 'shuffle', 'std', 'morton'
ito_plasma_godunov.load_index     = 0              # Species used for load balancing (-1 => all particles)
ito_plasma_godunov.load_ppc       = 0.0            # Load estimate per cell (in addition to particle load)
ito_plasma_godunov.nwo_reactions  = true           # Use or don't use the new reaction algorithm (presumably load balances better)
ito_plasma_godunov.max_cells_hop  = 1.0            # Maximum cells to move in one time step
ito_plasma_godunov.which_dt       = advection      # 'advection', 'diffusion', or 'AdvectionDiffusion'
ito_plasma_godunov.ppc            = 64             # Superparticle number of cells
ito_plasma_godunov.eb_tolerance   = 1.0            # How many dx into the cell particles can live
ito_plasma_godunov.merge_interval = 1              # How often to make superparticles
ito_plasma_godunov.relax_factor   = 0.5            # Factor in front of relaxation time
ito_plasma_godunov.regrid_super   = false          # Make superparticles after regrid or not
ito_plasma_godunov.algorithm      = euler_maruyama # 'euler_maruyama', or 'midpoint'
ito_plasma_godunov.diffusion      = super          # Which diffusion update? 'physical', 'super'
ito_plasma_godunov.diffu_samples  = 64             # Maximum number of diffusion samples when using 'physical' diffusion
ito_plasma_godunov.profile        = true           # Profile advance or not
ito_plasma_godunov.pvr_buffer     = 0              # PVR buffer for particles (overrides ito and mc_photo)
ito_plasma_godunov.halo_buffer    = 1              # Halo buffer for particles (overrides ito and mc_photo)
ito_plasma_godunov.filter_rho     = false          # Filter space charge or not. (Don't use). 
ito_plasma_godunov.filter_cond    = false          # Filter conductivity or not. (Try to use). 
ito_plasma_godunov.filter_1       = 0.5 1 4 true   # alpha = 0.5, stride = 1, N = 4, compensation = true. 